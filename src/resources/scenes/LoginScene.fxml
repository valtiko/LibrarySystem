<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="480.0" prefWidth="480.0" styleClass="blue-panel" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <children>
        <Label text="Logowanie" textFill="#2196f3">
            <font>
                <Font size="20.0" />
            </font>
            <VBox.margin>
                <Insets left="20.0" />
            </VBox.margin>
        </Label>
        <HBox alignment="CENTER" maxHeight="40.0" maxWidth="250.0" prefHeight="40.0" prefWidth="100.0">
            <children>
                <TextField fx:id="emailField" alignment="CENTER" promptText="Email" styleClass="tf_box" HBox.hgrow="ALWAYS" />
            </children>
            <VBox.margin>
                <Insets left="15.0" right="15.0" top="15.0" />
            </VBox.margin>
        </HBox>
        <HBox alignment="CENTER" maxWidth="250.0" prefHeight="40.0" prefWidth="100.0">
            <children>
                <PasswordField fx:id="passwordField" alignment="CENTER" promptText="Hasło" styleClass="tf_box" HBox.hgrow="ALWAYS" />
            </children>
            <VBox.margin>
                <Insets left="15.0" right="15.0" top="20.0" />
            </VBox.margin>
        </HBox>
        <Button mnemonicParsing="false" prefHeight="38.0" prefWidth="200.0" onAction="#Login" styleClass="blue-btn" text="Zaloguj" textFill="WHITE">
            <font>
                <Font size="17.0" />
            </font>
            <VBox.margin>
                <Insets left="15.0" right="15.0" top="20.0" />
            </VBox.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#goToRegister" prefHeight="38.0" prefWidth="200.0" styleClass="blue-btn" text="Załóż Konto" textFill="WHITE">
            <font>
                <Font size="17.0" />
            </font>
            <VBox.margin>
                <Insets left="15.0" right="15.0" top="20.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>
